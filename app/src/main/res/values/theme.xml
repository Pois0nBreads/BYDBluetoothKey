<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTheme.Material.Light" parent="@android:style/Theme.Material.Light">
        <item name="android:colorPrimary">#025E83</item>
        <item name="android:colorPrimaryDark">#024864</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
    </style>
    <!-- 自定义 ActionBar 样式 -->
    <style name="CustomActionBar" parent="@android:style/Widget.Material.Light.ActionBar">
        <!-- 设置标题文字样式 -->
        <item name="android:titleTextStyle">@style/CustomTitleTextStyle</item>
        <!-- 可以同时设置背景色 -->
        <item name="android:background">#025E83</item>
    </style>
    <!-- 自定义标题文字样式 -->
    <style name="CustomTitleTextStyle" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <!-- 单独设置标题文字颜色 -->
        <item name="android:textColor">#E7E7E7</item>
    </style>
</resources>